<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" fx:controller="com.example.tuhin.TaskManagerController">
    <children>
        <ListView fx:id="taskListView" />
        <TextField fx:id="taskInputField" />
        <Button text="Add Task" onAction="#addTask"/>
        <Button text="Mark Done" onAction="#markDone"/>
        <Button text="Remove Done" onAction="#removeDone"/>
        <Button text="Mark Important" onAction="#markImportant"/>
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</VBox>

